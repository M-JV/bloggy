extends layout

block content
  style.
    .hero-section {
      backdrop-filter: blur(6px);
      background-color: #ffffffcc;
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      font-family: 'Lora', serif;
    }
    .why-section {
      background: #f8f9fa;
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
    }
    .card {
      border: none;
      border-radius: 0.75rem;
    }
    .card-title {
      color: #0d6efd;
      font-family: 'Merriweather', serif;
    }
    .card-text {
      font-family: 'Roboto', sans-serif;
    }
    .btn-success {
      font-weight: bold;
      border-radius: 0.5rem;
    }
    .btn-outline-primary {
      font-weight: bold;
      border-radius: 0.5rem;
    }

  .min-vh-100.pt-5.pb-5.d-flex.flex-column.align-items-center.justify-content-start
    .container.text-center.hero-section
      h1.text-primary.mb-2 Welcome to Bloggy ✍️
      p.text-muted.mb-4 Your creative space for sharing ideas, thoughts, and inspiration.

    .container.mt-5.why-section
      h3.text-dark.mb-3.text-center Why Bloggy?
      ul.list-group.list-group-flush
        li.list-group-item.bg-transparent.border-0.text-dark 💬 Share your stories
        li.list-group-item.bg-transparent.border-0.text-dark 🤝 Connect with like-minded creators
        li.list-group-item.bg-transparent.border-0.text-dark 🌍 Explore a world of ideas

      .d-flex.justify-content-center.gap-3.mt-4
        a.btn.btn-success(href="/register") 🚀 Get Started
        a.btn.btn-outline-primary(href="/posts") 📚 View Posts

    .container.mt-5
      h2.text-center.mb-4.text-secondary Recent Blog Posts
      if posts.length
        .row.justify-content-center
          each post in posts
            .col-md-4
              .card.mb-4.shadow
                .card-body
                  h5.card-title= post.title
                  p.card-text= post.content.substring(0, 100) + '...'
                  small.text-muted By #{post.createdBy.username}
                  br
                  a.btn.btn-primary.mt-2(href=`/posts/${post._id}`) Read More
      else
        p.text-center.text-muted No blog posts yet. Be the first to create one!
        a.btn.btn-success.d-block.mx-auto.mt-2(href="/posts/new") Write Your First Blog
