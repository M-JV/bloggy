//- views/edit-post.pug
extends layout

block content
  h1 Edit Post
  form(action=`/posts/${post._id}` method="POST")
    .form-group
      label(for="title") Title
      input#title.form-control(type="text" name="title" value=post.title required)
    .form-group
      label(for="content") Content
      textarea#content.form-control(name="content" required)= post.content
    .form-group
      label(for="tags") Tags (comma-separated)
      input#tags.form-control(type="text" name="tags" value=post.tags.join(', '))
    button.btn.btn-primary.mt-3(type="submit") Update