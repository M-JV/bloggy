//- views/login.pug
extends layout

block content
  h1 Login

  // Flash messages
  .container.mt-2
    if success && success.length
      .alert.alert-success.text-center(role="alert")= success[0]

    if error && error.length
      .alert.alert-danger.text-center(role="alert")= error[0]

  form(method="POST" action="/login")
    .mb-3
      label(for="username") Username
      input.form-control(type="text" id="username" name="username" required)
    .mb-3
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" required)
    button.btn.btn-primary(type="submit") Login
