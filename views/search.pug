extends layout

block content
  h1.text-primary Search Results
  if searchTerm
    p.text-muted Results for "#{searchTerm}"
  if posts.length
    ul.list-group
      each post in posts
        li.list-group-item
          h5 
            a(href=`/posts/${post._id}`) #{post.title}
          p.text-muted By #{post.createdBy.username}
  else
    p.text-danger No posts found.